local old_init = BlackMarketTweakData._init_masks

function BlackMarketTweakData:_init_masks(tweak_data)
	old_init(self, tweak_data)

	for i,v in pairs(self.masks) do
		if not v.night_vision then
			v.night_vision = {
				effect = "color_night_vision",
				light = not _G.IS_VR and 0.3 or 0.1
			}
		else
			v.night_vision.effect = "color_night_vision"
			v.night_vision.light = not _G.IS_VR and 0.3 or 0.1
		end
	end
end
